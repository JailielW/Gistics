@page "/todos"
@using Gistics.Models
@inject Gistics.Services.ITodoService TodoService
@inject NavigationManager Navigation

<h3>Todos</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="CreateNew">New Todo</button>
</div>

@if (todos == null)
{
    <p><em>Loading...</em></p>
}
else if (!todos.Any())
{
    <p><em>No items yet.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>Completed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in todos)
            {
                <tr>
                    <td>@t.Title</td>
                    <td>@t.CreatedAt.ToLocalTime().ToString("g")</td>
                    <td>
                        @if (t.IsCompleted)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => View(t.Id)">View</button>
                        <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => Edit(t.Id)">Edit</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(t.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (deleteId != null)
{
    <div class="modal show d-block" tabindex="-1" role="dialog" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this todo?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button class="btn btn-danger" @onclick="DeleteAsync">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TodoItem>? todos;
    private Guid? deleteId;

    protected override async Task OnInitializedAsync()
    {
        todos = await TodoService.GetAllAsync();
    }

    private void CreateNew() => Navigation.NavigateTo("/todos/new");
    private void Edit(Guid id) => Navigation.NavigateTo($"/todos/edit/{id}");
    private void View(Guid id) => Navigation.NavigateTo($"/todos/view/{id}");

    private void ConfirmDelete(Guid id)
    {
        deleteId = id;
    }

    private void CancelDelete()
    {
        deleteId = null;
    }

    private async Task DeleteAsync()
    {
        if (deleteId is null) return;
        await TodoService.DeleteAsync(deleteId.Value);
        todos = await TodoService.GetAllAsync();
        deleteId = null;
        StateHasChanged();
    }
}